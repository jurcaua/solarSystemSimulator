// The "BubbleClass" class.
import java.awt.*;
import hsa.Console;

public class Bubble extends Ball
{
    protected int iHorizontal, iVertical;

    protected Console c;

    public Bubble ()  //Constructor method
    {
        super ();
        iHorizontal = 1;
        iVertical = (int) (Math.random () * 2) - 1;

    }


    public Bubble (int ix, int iy, int radius, Color clr1, Color bclr1, int iHor, int iVert)
    {
        super (ix, iy, radius, clr1, bclr1);
        iHorizontal = iHor;
        iVertical = iVert;

    }


    public Bubble (int ix, int iy, int radius, Color clr1, Color bclr1)
    {
        super (ix, iy, radius, clr1, bclr1);
        iHorizontal = (int) (Math.random () * 2) - 1;
        iVertical = (int) (Math.random () * 2) - 1;

    }


    public void SetHorizontal (int iH) 
    {
        iHorizontal = iH;
    }


    public int GetHorizontal () 
    {
        return iHorizontal;
    }


    public void SetVertical (int iV)
    {
        iVertical = iV;
    }


    public int GetVertical ()
    {
        return iVertical;
    }


    public void Move (Console c1)
    {
        Erase (c1);
        SetX (GetX () + GetHorizontal ());
        SetY (GetY () + GetVertical ());
        Draw (c1);

    }
} // BubbleClass class
